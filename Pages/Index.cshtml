@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border rounded border-2 p-4">
                <h2 class="text-center mb-4">Login</h2>

                <form method="post">
                    <div class="form-group mb-4">
                        <label for="userName">User Name:</label>
                        <input id="userName" class="form-control" type="text" placeholder="Enter User Name" required
                            asp-for="user!.UserName" placeholder="User Name" required>
                        <span asp-validation-for="user!.UserName" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-4">
                        <label for="password">Password:</label>
                        <div class="input-group">
                            <input id="password" class="form-control" type="password" placeholder="Enter Password"
                                required asp-for="user!.UserPassword" placeholder="Password" required>
                            <span asp-validation-for="user!.UserPassword" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>