@page
@model ReservationListModel
@{
    ViewData["Title"] = "Reservation";
}

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-20">
            <div class="card">

                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">Car Reservation List</h2>
                </div>

                <div class="card-body">
                    <div class="row">
                        @foreach (var reservation in Model.Reservations)
                        {
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h4 class="card-title">Reservation Details</h4>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>User ID:</strong> @reservation.ReservationId</p>
                                        <p><strong>User Name:</strong> @reservation.ReservationName</p>
                                        <p><strong>User Contact:</strong> @reservation.ReservationContact</p>
                                        <p><strong>Reservation Date and Time:</strong> @reservation.ReservationDateAndTime
                                        </p>
                                        <h5 class="mt-3">Reserved Car Details</h5>
                                        <p><strong>Car Brand:</strong> @reservation.ReservationCar!.CarBrand</p>
                                        <p><strong>Car Model:</strong> @reservation.ReservationCar.CarModel</p>
                                        <p><strong>Car Description:</strong> @reservation.ReservationCar.CarDescription</p>
                                        <p><strong>Car Image:</strong> <img src="@reservation.ReservationCar.CarImage"
                                                alt="Car Image" class="img-fluid" style="max-width: 250px;" /></p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
