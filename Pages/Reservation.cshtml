@page
@model ReservationModel
@{
    ViewData["Title"] = "Reservation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border rounded border-2 p-4">
                <h2 class="text-center mb-4">Car Reservation</h2>

                <form method="post">
                    @if (Model.CarId == null)
                    {

                        <div class="form-group mb-4">
                            <label for="reservationCarId">Select a Car:</label>
                            <select id="reservationCarId" class="form-control" asp-for="reservation!.ReservationCarId"
                                required>


                                <option value="">-- Select Car --</option>


                                @foreach (var car in Model.AvailableCars)
                                {
                                    <option value="@car.CarId">@car.CarBrand - @car.CarModel</option>
                                }
                            </select>
                            <span asp-validation-for="reservation!.ReservationCarId" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="form-group mb-4">
                            <label for="reservationCarId">Selected Car:</label>
                            <input id="reservationCarId" class="form-control"
                                value="@($"{Model.selectedCar!.CarBrand} - {Model.selectedCar!.CarModel}")" disabled>
                            <input type="hidden" asp-for="reservation!.ReservationCarId" value="@Model.selectedCar!.CarId">
                        </div>

                    }

                    <input type="hidden" id="CarId" name="CarId" value="@Model.CarId" />
                    <div class="form-group mb-4">
                        <label for="reservationName">Name:</label>
                        <input id="reservationName" class="form-control" type="textbox"
                            asp-for="reservation!.ReservationName" placeholder="First Last Name" required>
                        <span asp-validation-for="reservation!.ReservationName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="reservationContact">Contact Number:</label>
                        <input id="reservationContact" class="form-control" type="textbox"
                            asp-for="reservation!.ReservationContact" placeholder="XXX-XXX-XXXX" required>
                        <span asp-validation-for="reservation!.ReservationContact" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="reservationDateAndTime">Reservation Date:</label>
                        <input id="reservationDateAndTime" class="form-control" type="datetime-local" required
                            asp-for="reservation!.ReservationDateAndTime">
                        <span asp-validation-for="reservation!.ReservationDateAndTime" class="text-danger"></span>
                    </div>

                    <div class="row mt-5">
                        <button type="submit" class="btn btn-primary btn-lg ">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
